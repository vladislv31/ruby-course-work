<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">

    <title><%= content_for?(:html_title) ? yield(:html_title) : "Default" %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>

    <% if current_user %>

    <header data-bs-theme="dark">
      <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container">
          <a href="/" class="navbar-brand d-flex align-items-center">
            <strong>Food Delivery</strong>
          </a>
          <div>
            <% if current_user.is_admin %>
              <%= link_to "Замовлення", orders_path, class: "btn btn-outline-light" %>
            <% end %>
            <%= link_to "Кошик", cart_path, class: "btn btn-outline-light" %>
            <%= link_to "Вийти", logout_path, class: "btn btn-outline-light" %>
          </div>
        </div>
      </div>
    </header>

    <% end %>

    <%= yield %>

    <% if current_user %>

    <footer class="container py-5">
      <div class="row">
        <div class="col-12 col-md">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="d-block mb-2" role="img" viewBox="0 0 24 24"><title>Product</title><circle cx="12" cy="12" r="10"/><path d="M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83m13.79-4l-5.74 9.94"/></svg>
          <small class="d-block mb-3 text-body-secondary">&copy; 2017–2023</small>
        </div>
        <div class="col-6 col-md">
          <h5>Корисні посилання</h5>
          <ul class="list-unstyled text-small">
            <li><a class="link-secondary" href="#">Про нас</a></li>
            <li><a class="link-secondary" href="#">Часті запитання</a></li>
            <li><a class="link-secondary" href="#">Блог</a></li>
            <li><a class="link-secondary" href="#">Контакти</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>Соц. мережі</h5>
          <ul class="list-unstyled text-small">
            <li><a class="link-secondary" href="#">Facebook</a></li>
            <li><a class="link-secondary" href="#">Twitter</a></li>
            <li><a class="link-secondary" href="#">Instagram</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>Співпраця</h5>
          <ul class="list-unstyled text-small">
            <li><a class="link-secondary" href="#">Вакансії</a></li>
            <li><a class="link-secondary" href="#">Кур'єри</a></li>
          </ul>
        </div>
        <div class="col-6 col-md">
          <h5>Інше</h5>
          <ul class="list-unstyled text-small">
            <li><a class="link-secondary" href="#">Правила й умови</a></li>
            <li><a class="link-secondary" href="#">Політика конфіденційності</a></li>
            <li><a class="link-secondary" href="#">Політика файлів cookie</a></li>
          </ul>
        </div>
      </div>
    </footer>

    <% end %>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  </body>
</html>