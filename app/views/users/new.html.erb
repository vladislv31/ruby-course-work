<% content_for(:html_title) { 'Реєстрація' } %>

<div class="form-signup">
  <%= form_with url: users_path, method: :post, data: {turbo: false} do |form| %>
    <%= csrf_meta_tags %>

    <h1 class="h3 mb-3 fw-normal">Реєстрація</h1>

    <div class="form-floating">
      <%= text_field_tag :name, @user.name, required: true, class: 'form-control', id: 'floatingInput', placeholder: 'Ім\'я' %>
      <label for="floatingInput">Ім'я</label>
    </div>
    <div class="form-floating">
      <%= email_field_tag :email, @user.email, required: true, class: 'form-control', id: 'floatingInput', placeholder: 'name@example.com' %>
      <label for="floatingInput">Почта</label>
    </div>
    <div class="form-floating">
      <%= text_field_tag :phone, @user.phone, required: true, class: 'form-control', id: 'floatingInput', placeholder: 'Телефон' %>
      <label for="floatingInput">Телефон</label>
    </div>
    <div class="form-floating">
      <%= password_field_tag :password, nil, required: true, class: 'form-control', id: 'floatingPassword', placeholder: 'Пароль' %>
      <label for="floatingPassword">Пароль</label>
    </div>
    <div class="form-floating">
      <%= password_field_tag :password_confirmation, nil, required: true, class: 'form-control', id: 'floatingPassword', placeholder: 'Підтвердіть пароль' %>
      <label for="floatingPassword">Підтвердіть пароль</label>
    </div>
    <%= submit_tag "Зареєструватися", class: 'w-100 btn btn-lg btn-primary' %>
    <br><br>
    <%= link_to "Повернутися", '/'%>
    <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
  <% end %>
  <% if flash.now[:alert] %>
    <div class="alert alert-danger">
      <%= flash.now[:alert] %>
    </div>
  <% end %>
</div>