<h1>Signup</h1>

<form action="/users" method="post">
  <%= csrf_meta_tags %>
  <label for="user_name">Name</label>
  <%= text_field_tag :name, @user.name, required: true %>
  <label for="user_email">Email</label>
  <%= email_field_tag :email, @user.email, required: true %>
  <label for="user_password">Password</label>
  <%= password_field_tag :password, required: true %>
  <label for="user_password_confirmation">Confirm Password</label>
  <%= password_field_tag :password_confirmation, required: true %>
  <%= submit_tag "Create Account" %>
</form>
