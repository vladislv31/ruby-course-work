      <% if current_user.is_admin %>
        <%= link_to 'Додати новий', new_restaurant_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
    <br><br>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
      <% @restaurants.each do |restaurant| %>
        <div class="col">
          <div class="card shadow-sm">
            <% if restaurant.image.attached? %> 
              <%= image_tag restaurant.image.variant(resize_to_fill: [500, 350]).processed, class: 'card-img-top' %>
            <% end %>
            <div class="card-body">
              <h5><%= restaurant.name %></h5>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Товари', restaurant_path(restaurant), class: 'btn btn-sm btn-outline-primary' %>
                  <% if current_user.is_admin %>
                    <%= link_to 'Редагувати', edit_restaurant_path(restaurant), class: 'btn btn-sm btn-primary' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      </div>
      <br>
    </div>
